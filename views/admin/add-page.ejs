<%- include('../_layouts/admin_header'); %>
    <a href="/admin/pages" class="btn btn-primary my-3">Back to all pages</a>
    <h1>Add page</h1>
    <form action="/admin/pages/add-page" method="post">
        <div class="form-group">
            <label>Title: </label>
            <input type="text" name="title" placeholder="Title" class="form-control" />
        </div>
        <div class="form-group">
            <label>Slug: </label>
            <input type="text" name="slug" placeholder="Slug" class="form-control" />
        </div>
        <div class="form-group">
            <label>Content: </label>
            <textarea name="content" placeholder="Content" cols="5" rows="5" class="form-control"></textarea>
        </div>
        <div class="forom-group">
            <button class="btn btn-primary" type="submit">Add Page</button>
        </div>
    </form>
<%- include('../_layouts/admin_footer'); %>
