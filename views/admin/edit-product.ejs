<%- include('../_layouts/admin_header'); %>
    <a href="/admin/products" class="btn btn-primary my-3">Back to all products</a>
    <h1>Add page</h1>
    <form action="/admin/products/update-product/<%= product._id %>" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label>Title: </label>
            <input type="text" name="title" value="<%= product.title %>" placeholder="Title" class="form-control" />
        </div>
        <div class="form-group">
            <label>Category: </label>
            <select name="category" class="form-control">
                <% categories.map(category => { %>
                    <% if (category._id == product.category) { %>
                        <option value="<%= category._id %>" selected="true"><%= category.title %></option>
                    <% }else{ %>
                        <option value="<%= category._id %>"><%= category.title %></option>
                    <% } %>
                <% }); %>
            </select>
        <div class="form-group">
            <label>Price: </label>
            <input type="number" value="<%= product.price %>" min="0" step="0.01" name="price" placeholder="Price" class="form-control" />
        <div class="form-group">
            <label>Content: </label>
            <textarea name="description" placeholder="Description" cols="5" rows="5" class="form-control"><%= product.description %></textarea>
        </div>
        <div class="form-group">
            <label>Image: </label>
            <input type="file" name="image" accept='image/*' onchange="openfile(event)" class="form-control" />
            <img id='output' style="height:100px; width:p100px" src="<%= product.image %>">
        </div>
        </div>
        <div class="forom-group">
            <button class="btn btn-primary" type="submit">Update Product</button>
        </div>
    </form>
<%- include('../_layouts/admin_footer'); %>

